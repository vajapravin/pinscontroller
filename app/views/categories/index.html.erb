<div class="container">
  <div class="bs-example bs-example-bg-classes">
    <p class="bg-success">Categories</p>
    <%= link_to 'New Category', new_category_path, class: 'btn btn-default' %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name rescue '' %></td>
          <td><%= link_to 'Edit', edit_category_path(category) %> | <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>